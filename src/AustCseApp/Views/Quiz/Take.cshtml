@model AustCseApp.Models.QuizPayload
@{
    ViewData["Title"] = "Take Quiz";
}

<style>
    .page-wrap {
        max-width: 1100px;
        margin: 24px auto;
    }

    .header {
        background: #f8fafc;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        padding: 16px
    }

    .q-card {
        background: #fff;
        border: 1px solid #e5e7eb;
        border-radius: 12px
    }

        .q-card + .q-card {
            margin-top: 16px
        }

    .q-stem {
        font-weight: 600;
        margin-bottom: 8px
    }
</style>

<div class="container page-wrap">
    <div class="header d-flex justify-content-between align-items-center mb-3">
        <div class="fw-semibold">@Model.topic (@Model.difficulty)</div>
        <small class="text-muted">@Model.questions.Count question(s)</small>
    </div>

    <form asp-action="Submit" method="post">
        @for (int i = 0; i < Model.questions.Count; i++)
        {
            var q = Model.questions[i];
            <div class="q-card p-3">
                <div class="q-stem">Q@(i + 1). @q.stem</div>

                @if (q.type == "mcq")
                {
                    <div class="list-group">
                        @for (int j = 0; j < q.options.Count; j++)
                        {
                            <label class="list-group-item d-flex align-items-center gap-2">
                                <input class="form-check-input me-2" type="radio" name="answers[@i]" value="@j" />
                                <span>@q.options[j]</span>
                            </label>
                        }
                    </div>
                }
                else if (q.type == "truefalse")
                {
                    <div class="list-group">
                        <label class="list-group-item d-flex align-items-center gap-2">
                            <input class="form-check-input me-2" type="radio" name="answers[@i]" value="1" />
                            <span>True</span>
                        </label>
                        <label class="list-group-item d-flex align-items-center gap-2">
                            <input class="form-check-input me-2" type="radio" name="answers[@i]" value="0" />
                            <span>False</span>
                        </label>
                    </div>
                }
            </div>
        }

        <div class="text-end mt-3">
            <button class="btn btn-success btn-lg" type="submit">Submit</button>
        </div>
    </form>
</div>
