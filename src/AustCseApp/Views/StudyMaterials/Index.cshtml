@model AustCseApp.Models.StudentLookup
@{
    ViewData["Title"] = "Study Materials";
}

<style>
    /* Page styling */
    .sm-hero {
        background: radial-gradient(1000px 300px at 20% -10%, rgba(99,102,241,.15), transparent), linear-gradient(135deg, #f8fafc 0%, #eef2ff 100%);
        border: 1px solid #e5e7eb;
        border-radius: 18px;
        padding: 28px;
        box-shadow: 0 8px 24px rgba(15,23,42,.06);
    }

    .sm-badge {
        font-size: .85rem;
        padding: .35rem .6rem;
        border-radius: 999px;
        background: #eef2ff;
        color: #3730a3;
    }

    .sm-label {
        font-weight: 600;
        color: #334155;
    }

    .sm-card {
        border: 1px solid #e5e7eb;
        border-radius: 16px;
        padding: 20px;
        background: #fff;
    }

    #btn-proceed:disabled {
        opacity: .6;
    }
</style>

<div class="container mt-5">
    <div class="sm-hero">
        <div class="d-flex align-items-center gap-2 mb-3">
            <span class="sm-badge">Study Materials</span>
            <small class="text-muted">Instant access to your course notes</small>
        </div>

        <h2 class="fw-semibold mb-4">Find materials for your term</h2>

        <form id="lookup-form" class="sm-card">
            <div class="row g-4 align-items-end">
                <!-- Student ID -->
                <div class="col-lg-5 col-md-6">
                    <label asp-for="StudentId" class="form-label sm-label"></label>
                    <input asp-for="StudentId"
                           type="text"
                           class="form-control"
                           maxlength="11"
                           pattern="\d{11}"
                           placeholder="e.g., 20XX-1-60-XXX" />
                    <span asp-validation-for="StudentId" class="text-danger small"></span>
                </div>


                <!-- Year -->
                <div class="col-lg-2 col-md-3">
                    <label asp-for="Year" class="form-label sm-label"></label>
                    <select asp-for="Year" class="form-select">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                    </select>
                </div>

                <!-- Semester -->
                <div class="col-lg-2 col-md-3">
                    <label asp-for="Semester" class="form-label sm-label"></label>
                    <select asp-for="Semester" class="form-select">
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>

                <!-- Button -->
                <div class="col-lg-3 col-md-12 d-grid">
                    <button type="button" id="btn-proceed" class="btn btn-primary btn-lg">
                        Proceed
                    </button>
                </div>
            </div>

            <!-- Tip -->
            <div class="mt-3">
                <small id="ys-preview" class="text-secondary">
                    Tip: pick Year & Semester, then click <strong>Proceed</strong>.
                </small>
            </div>
        </form>
    </div>
</div>

<partial name="_CourseModal" />

@section Scripts {
    <script src="~/js/study-materials.js"></script>
}
